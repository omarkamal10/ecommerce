
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    

    <title></title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" >
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

  </head>

  <body>
    <div class="ajaxbg">
      <div class="ajaxinner">
        <h3>You are now being redirected to paypal...</h3>
        <img src="/images/ajax-loader.gif" alt="">
      </div>
    </div>

    <nav class="navbar navbar-inverse ">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand">Souq El Ghalaba</a>
        </div>
        
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <% pages.forEach((page) => { %>
                  <% if (page.slug == "home") { %>
                    <li class="nav-item"><a href="/"><%= page.title %></a></li>
                  <%}else {%>
                    <li class="nav-item"><a href="/<%= page.slug %>"><%= page.title %></a></li>
                  <%}%>
              <%  }) %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="nav-item"> 
                <a href="/cart/checkout">My Cart(
                     <% if (typeof cart !== "undefined") {%>
                        <%=cart.length%>
                     <% } else { %>
                        0
                      <%} %>
                  )</a>
              </li>
              <% if (user) {%>
                <li><a href="/user/logout">Hi, <%=user.username%> Log out</a></li>
             <% } else { %>
              <li><a href="/user/register">Register</a></li>
              <li><a href="/user/login">Log in</a></li>
              <%} %>
              <% if (user && user.admin == 1){ %>
                <li><a href="/admin/pages">Admin Area</a></li>
              <% } %>

              
          </ul>
        </div>
      </div>
    </nav>
    

    <div class="container">
        <%- messages('messages', locals) %>

        <% if(errors) { %>
            <% errors.forEach((error)=>{ %>
                <div class="alert alert-danger">
                  <%= error.msg %>
                </div>
          <%  }) %>
        <%} %>

        <div class="row">
          <div class="col-xs-12 col-md-3">
            <h3>Categories</h3>
            <ul class="list-group">
              <li class="list-group-item"><a href="/user/products">All products</a></li>
              <% categories.forEach((category) => {%>
                <li class="list-group-item"><a href="/user/products/<%=category.slug%>"><%=category.title%></a></li>
              <%})%>
            </ul>
          </div>
          <div class="col-xs-12 col-md-1"></div>
          <div class="col-xs-12 col-md-8">

            
          

   
